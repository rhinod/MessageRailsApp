<h2 class="ui center aligned icon header">
  <i class="circular green envelope outline icon"></i>
  Chat room
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui large feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class:"ui reply form", role: "form" }, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body %>
                            <%= f.button '<i class="bordered inverted green edit icon"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>    
            </div>
        </div>
    </div>
    
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a href="" class="item">Mensajes</a>
                    <a href="" class="item">Amigos</a>
                    <a href="" class="item">Placeholder 1</a>
                    <a href="" class="item">Placeholder 2</a>
                </div>
            </div>
        </div>
    </div>
</div>



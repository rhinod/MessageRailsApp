<h2 class="ui center aligned icon header">
  <i class="circular green envelope outline icon"></i>
  Chat room
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui large feed">
                <% @messages.each do |msj| %>
                    <div class="event">    
                        <div class="content">
                            <div class="date">
                                <%= time_ago_in_words(msj.created_at) %> ago
                            </div>
                            <div class="summary">
                                <%= link_to msj.user.username, '#' %> : <%= msj.body %>
                            </div>
                        </div>
                    </div>
                <% end %>
